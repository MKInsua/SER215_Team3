import java.awt.event.MouseEvent;
import java.awt.event.MouseListener;

//takes mouse input from the user

public class UserInput implements MouseListener{
	private int width, height, x, y, flash;
	
	/**
	 * initializes the class with the width and height of the window.
	 * @param width
	 * @param height
	 */
	public UserInput(int width, int height){
		
		this.width = width;
		this.height = height;
		x = 0;
		y = 0;
		flash = 1;
		
	}
	/**
	 * Sets x and y to the value of the mouse. Then it checks the screen for the quadrant that is clicked. 
	 * Depending on the value it sets the number to be checked in the program.
	 */
	public void mousePressed(MouseEvent e){
		
		x = e.getX();
		y = e.getY();
		
		if(x > 0 && x < (width / 2) && y > 0 && y < (height / 2)){
			flash = 1;
		}
		if(x > (width / 2) && x < width && y > 0 && y < (height / 2)){
			flash = 2;
		}
		if(x > 0 && x < (width / 2) && y > (height / 2) && y < height){
			flash = 3;
		}
		if(x > 0 && x < (width / 2) && y > (height / 2) && y < height){
			flash = 4;
		}
	}
	/**
	 * returns the number to be checked. Allows for the program to check the number against the random sequence.
	 * @return
	 */
	public int getClick(){
		
		return flash;
	}
	

	@Override
	public void mouseClicked(MouseEvent e) {
		// TODO Auto-generated method stub
		
	}
	@Override
	public void mouseEntered(MouseEvent e) {
		// TODO Auto-generated method stub
		
	}
	@Override
	public void mouseExited(MouseEvent e) {
		// TODO Auto-generated method stub
		
	}
	@Override
	public void mouseReleased(MouseEvent e) {
		// TODO Auto-generated method stub
		
	}
}
